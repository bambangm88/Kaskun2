<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">



    <com.synnapps.carouselview.CarouselView
        android:id="@+id/carouselView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:fillColor="#FFFFFFFF"
        app:pageColor="#00000000"
        app:radius="6dp"
        app:slideInterval="3000"
        app:strokeColor="#FF777777"
        app:strokeWidth="1dp"/>




    <LinearLayout
        android:id="@+id/ly_1"
        android:weightSum="2"
        android:layout_below="@id/carouselView"
        android:layout_width="fill_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_centerInParent="true"
                    android:elevation="2dp"
                    android:background="#fff"
                    android:id="@+id/btn_menu_1"
                    android:src="@drawable/scan"
                    android:layout_width="140dp"
                    android:layout_height="140dp" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_below="@id/btn_menu_1"
                    android:text="SCAN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_centerInParent="true"
                    android:elevation="2dp"
                    android:background="#fff"
                    android:id="@+id/btn_menu_2"
                    android:src="@drawable/petunjuk"
                    android:layout_width="140dp"
                    android:layout_height="140dp" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_below="@id/btn_menu_2"
                    android:text="PETUNJUK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>




    <LinearLayout

        android:weightSum="2"
        android:layout_below="@id/ly_1"
        android:layout_width="fill_parent"
        android:layout_height="180dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_centerInParent="true"
                    android:elevation="2dp"
                    android:background="#fff"
                    android:id="@+id/btn_menu_3"
                    android:src="@drawable/tentang"
                    android:layout_width="140dp"
                    android:layout_height="140dp" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_below="@id/btn_menu_3"
                    android:text="TENTANG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_centerInParent="true"
                    android:elevation="2dp"
                    android:background="#fff"
                    android:id="@+id/btn_menu_4"
                    android:src="@drawable/exit"
                    android:layout_width="140dp"
                    android:layout_height="140dp" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_below="@id/btn_menu_4"
                    android:text="KELUAR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>





</RelativeLayout>